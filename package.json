{
  "name": "vsc-blocks-notion",
  "displayName": "Code to Notion",
  "description": "send code blocks to notion page",
  "author": {
    "name": "Bram Adams",
    "url": "https://bramadams.dev/"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vsc-blocks-notion.toNotion"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsc-blocks-notion.toNotion",
        "title": "Send Block to Notion"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vsc-blocks-notion.toNotion",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "VSC Code Blocks -> Notion",
        "description": "VSC Code Blocks -> Notion",
        "order": 1,
        "properties": {
          "vsc-blocks-notion.notionToken": {
            "type": "string",
            "description": "Set your Notion Token",
            "editPresentation": "singlelineText"
          },
          "vsc-blocks-notion.databaseId": {
            "type": "string",
            "description": "Set your Notion DB ID",
            "editPresentation": "singlelineText"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "@notionhq/client": "^0.4.6",
    "dotenv": "^10.0.0"
  }
}
